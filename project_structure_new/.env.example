# Medical Report Simplifier - Environment Configuration
# Copy this file to .env and update with your values

# ===== APPLICATION SETTINGS =====
APP_NAME=Medical Report Simplifier
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# ===== DATABASE CONFIGURATION =====
# SQLite (default for development)
DATABASE_URL=sqlite:///healthcare.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://username:password@localhost/medical_reports

# MySQL (alternative)
# DATABASE_URL=mysql://username:password@localhost/medical_reports

# ===== FLASK CONFIGURATION =====
FLASK_APP=backend/app.py
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# ===== STREAMLIT CONFIGURATION =====
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_THEME_PRIMARY_COLOR=#FF6B35
STREAMLIT_THEME_BACKGROUND_COLOR=#FFFFFF
STREAMLIT_THEME_SECONDARY_BACKGROUND_COLOR=#F0F2F6

# ===== FILE UPLOAD SETTINGS =====
UPLOAD_FOLDER=uploads/
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,txt,docx

# ===== SECURITY SETTINGS =====
SESSION_TIMEOUT=3600  # 1 hour in seconds
BCRYPT_LOG_ROUNDS=12
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour
JWT_REFRESH_TOKEN_EXPIRES=604800  # 7 days

# ===== ML MODEL SETTINGS =====
ML_MODEL_PATH=ml/models/trained/
ENABLE_GPU=False
MODEL_CACHE_SIZE=100
BATCH_SIZE=32
MAX_SEQUENCE_LENGTH=512

# ===== MEDICAL ANALYSIS SETTINGS =====
ENABLE_DISEASE_DETECTION=True
ENABLE_HEALTH_SCORING=True
ENABLE_RISK_ASSESSMENT=True
CONFIDENCE_THRESHOLD=0.8
MAX_REPORT_SIZE_MB=10

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5
ENABLE_ACCESS_LOGGING=True

# ===== CACHE SETTINGS =====
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300  # 5 minutes

# ===== EMAIL CONFIGURATION =====
# (for notifications and password reset)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
MAIL_USE_TLS=True
MAIL_USE_SSL=False

# ===== EXTERNAL API KEYS =====
# (if integrating with external medical APIs)
EXTERNAL_API_KEY=your-api-key-here
EXTERNAL_API_URL=https://api.example.com

# ===== MONITORING AND ANALYTICS =====
ENABLE_ANALYTICS=False
ANALYTICS_API_KEY=your-analytics-key
ERROR_REPORTING_DSN=your-sentry-dsn

# ===== BACKUP SETTINGS =====
BACKUP_ENABLED=True
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=backups/

# ===== DEVELOPMENT SETTINGS =====
RELOAD_ON_CHANGE=True
ENABLE_PROFILING=False
MOCK_ML_RESPONSES=False
